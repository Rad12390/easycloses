<div class="render_business" id="render_business">
    <div class="row-fluid">
       <ul class="thumbnails bxslider" style="padding-left: 15px;">
            {% for user in users %}
                <li class="vendor-box">
                    <div class="span12 space-mobile well border_shadow" style="min-height:290px;margin-bottom:0;background-color:#fff;position:relative;border: 1px solid;text-align: center;">
                        <div class="img_contain" style="height: 140px; display: -ms-flexbox; display: -webkit-flex; display: flex; -ms-flex-align: center; -webkit-align-items: center; -webkit-box-align: center; align-items: center;">
                            <img src="{{ vich_uploader_asset(user.businesses[0], 'file') }}" alt="" style="max-width:100%; max-height:120px; margin: 0 auto;">
                        </div>

                        <div style="bottom: 10px;position: absolute;text-align: center;width: 79%;">
                            <h5>
                                <strong>{{ user.firstname }} {{ user.lastname }}</strong><br/>
                                {{ user.businesses[0].name }}<br/>
                                <a href="{{ path('vendor_bio_ajax', {'vendorId': user.id}) }}" data-target="#ajax" data-toggle="modal">Bio</a><br>
                                {% for type in user.businesses[0].types %}
                                    {{ type.name }}<br>
                                {% endfor %}
                            </h5>
                            <form action="{{ path('user_add_vendor',{'vendorId': user.id})}}">
                                <div class="profile-sidebar">
                                    <div style="padding: 0; margin-bottom: 5px;" class="portlet light profile-sidebar-portlet">
                                        <div class="profile-userbuttons">
                                            <a id="add_business_contact" class="btn  green-haze btn-sm" href="{{ path('user_add_vendor',{'vendorId': user.id})}}"><i class="fa fa-plus"></i>Add</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </li>
            {% endfor %}
       </ul>
    </div>
</div>