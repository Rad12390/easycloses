{% if users is not null %}
    <div class="render_business" id="render_business">
        <div class="row-fluid">
            <ul class="thumbnails bxslider">
                {% for user in users %}
                    <li class="vendor-box">
                        <div class="span12 space-mobile well border_shadow" style="min-height:230px;margin-bottom:0;background-color:#fff;position:relative;border: 1px solid;text-align: center;">
                            <div class="img_contain" style="">
                                <img src="{{ vich_uploader_asset(user, 'file') }}" alt="" style="max-width:100%;max-height:100%;">
                            </div>

                            <div style="bottom: -10px;position: absolute;text-align: center;width: 90%;">
                                <div class="profile-usertitle">
                                    <div class="profile-usertitle-name">
                                        {{user.firstname}}&nbsp;{{user.lastname}}
                                    </div>
                                    <div class="profile-usertitle-job">
                                        {% if user.owner.type is defined and user.owner.type is not null%}
                                            {{user.owner.type.name}}
                                        {% endif %}
                                    </div>
                                </div>

                                    <form action="{{ path('contact_add_business',{'id': user.id, 'type': type})}}">
                                        <div class="profile-sidebar">
                                            <div class="portlet light profile-sidebar-portlet">
                                                <div class="profile-userbuttons">
                                                    <a id="add_business_contact" class="btn  green-haze btn-sm" href="{{ path('contact_add_business',{'id': user.id , 'type': type})}}"><i class="fa fa-plus"></i>Add</a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>


{% else %}
    <span class="small">No record found</span>
{% endif%}

