<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-mail-reply-all"></i> Emails Recipients
        </div>
        <div class="actions">
            <a class="btn btn-danger" data-toggle="tab" href="#business_email_templates">
                <i class="fa fa-sticky-note-o"></i> Email Templates
            </a>
            <a class="btn  btn-danger" href="{{ path('business_recipient_create') }}">
                <i class="icon-plus"></i> Add Recipient
            </a>
        </div>
    </div>

    <div class="portlet-body">
        <table id="example" class="table table-bordered table-striped table-condensed">
            <thead class="flip-content">
            <tr>
                <th> Title </th>
                <th> Email </th>
                <th> </th>
            </tr>
            </thead>
            <tbody>
            {% for recipient in recipients %}
                <tr>
                    <td> {{ recipient.title }} </td>
                    <td> {{ recipient.email }} </td>
                    <td>
                        <a href="{{ path('business_recipient_edit', {'id': recipient.id}) }}" class="btn btn-xs btn-warning">
                            <i class="fa fa-edit"></i> Edit
                        </a>

                        <a onclick="return confirm('Are you sure?')" href="{{ path('business_recipient_delete', {'id': recipient.id}) }}" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash-o"></i> Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
