{% extends "::blank.html.twig" %}

{% block title %}
    Register 
{% endblock %}

{% block content %}
    {{ form_start(form, {attr: {class: 'register_form'} }) }}
        {{ form_widget(form._token) }}
        <h3>Sign Up</h3>
        <p>
            Enter your personal details below:
        </p>
        <div class="form-group {% if form.firstName.vars.errors|length %}has-error{% endif %}">
            <label class="control-label visible-ie8 visible-ie9">First Name</label>
            <div class="input-icon">
                <i class="fa fa-font"></i>
                {{ form_widget(form.firstName) }}
                <span class="help-block">
                    {{ form_errors(form.firstName) }}
                </span>
            </div>
        </div>
        <div class="form-group {% if form.lastName.vars.errors|length %}has-error{% endif %}">
            <label class="control-label visible-ie8 visible-ie9">Last Name</label>
            <div class="input-icon">
                <i class="fa fa-font"></i>
                {{ form_widget(form.lastName) }}
                <span class="help-block">
                    {{ form_errors(form.lastName) }}
                </span>
            </div>
        </div>
        <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Email</label>
        <div class="input-icon">
            <i class="fa fa-envelope"></i>
            {% if invited %}
                {% set attr = {'readonly': 'readonly'} %}
            {% else %}
                {% set attr = {} %}
            {% endif %}
            {% for email in form.contact.emails %}
                {{ form_widget(email.email, {attr: attr}) }}
                <span class="help-block">
                    {{ form_errors(email.email) }}
                </span>
            {% endfor %}
        </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Phone</label>
            <div class="input-icon">
                <i class="fa fa-phone"></i>
                {% for phone in form.contact.phones %}
                    {{ form_widget(phone.number) }}
                    <span class="help-block">
                        {{ form_errors(phone.number) }}
                    </span>
                {% endfor %}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Phone Type</label>
            <div class="input-icon">
                {% for phone in form.contact.phones %}
                    {{ form_widget(phone.type) }}
                    <span class="help-block">
                        {{ form_errors(phone.type) }}
                    </span>
                {% endfor %}
            </div>
        </div>

        <p>
            Enter your account details below:
        </p>

        <div class="form-group {% if form.username.vars.errors|length %}has-error{% endif %}">
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                {{ form_widget(form.username)}}
                <span class="help-block">
                    {{ form_errors(form.username) }}
                </span>
            </div>
        </div>
        <div class="form-group {% if form.password.first.vars.errors|length %}has-error{% endif %}">
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                {{ form_widget(form.password.first) }}
                <span class="help-block">
                    {{ form_errors(form.password.first) }}
                </span>
            </div>
        </div>
        <div class="form-group">
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                {{ form_widget(form.password.second) }}
                <span class="help-block">
                    {{ form_errors(form.password.second) }}
                </span>
            </div>
        </div>
        <div class="hidden">
            {{ form_widget(form.role) }}
        </div>

        <div class="form-group">
            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                I agree to the <a href="{{ path('locals_best_terms') }}">Terms of Service and Privacy Policy</a>
                <input type="checkbox" id="register_tnc" name="register[tnc]" required="required" value="1">
                <span></span>
            </label>
        </div>

        <div class="form-actions">
            <a href="{{ path('login') }}" class="btn default">
                <i class="m-icon-swapleft"></i> Back </a>
            <button type="submit" id="register-submit-btn" class="btn green pull-right">
                Sign Up <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>

        <p>
            Please contact Easy Closes at 239-443-3020 for help signing in or registering
        </p>
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}