<div class="form-group">
    <div class="col-md-8">
        <input class="form-control" name="mls" placeholder="MLS #">
    </div>
    <div class="col-md-4 text-right" >
        <button class="btn btn-primary">

            <i class="fa fa-share"></i> Autofill MLS
        </button>
    </div>
</div>

<div class="form-group">
    <div class="col-md-9">
        <input class="form-control" name="street" required placeholder="Street Address">
    </div>
    <div class="col-md-3">
        <input class="form-control" name="unit" placeholder="Unit">
    </div>
</div>

<div class="form-group">
    <div class="col-md-4">
        <input class="form-control" name="city" required placeholder="City">
    </div>
    <div class="col-md-4">
        <input class="form-control" name="state" required pattern=".{2,}" title="2 characters length" maxlength="2" onkeyup="javascript:this.value=this.value.toUpperCase();" placeholder="State">
    </div>
    <div class="col-md-4">
        <input class="form-control" name="zip" pattern=".{5,}" title="5 characters length" maxlength="5" required  onkeypress='return event.charCode >= 48 && event.charCode <= 57' placeholder="Zip Code">
    </div>
</div>