{% block javascripts %}
<script>
    jQuery(document).ready(function () {
        $('.modal-content').modal('hide');
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
        $("#add-note-form").submit(function() {
            var url = $(this).attr('action');
            var data = $(this).serialize();
            $.post(url, data, function(data) {
            });
            location.reload(true);
            return false;
        });
    });
</script>
{%endblock%}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Invite Contact</h4>
    </div>
        <form id="add-note-form" action="{{ path('contact_invite_ajax', {'id': id ,'type': type}) }}" method="POST">
    
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">

                    <div class="form-group">
                        <label class="sr-only" for="exampleInputEmail2">Email address</label>
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="exampleInputPassword2">Role</label>
                        {{ form_widget(form.role) }}
                    </div>

                    <button type="submit" class="btn btn-default">Invite</button>

                </div>
            </div>   
        </div>
        {{ form_end(form) }}
</div>