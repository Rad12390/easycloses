<div class="product-thumb product-thumb-horizontal">
    <header class="product-header">
        {% if product.0.images is not empty %}
            <img src="{{ vich_uploader_asset(product.0.images.0, 'imageFile', 'LocalsBest\\UserBundle\\Entity\\ProductImage') }}" alt="{{ product.0.title }}" title="{{ product.0.title }}">
        {% else %}
            <img src="/shop/img/800x600.png" alt="{{ product.0.title }}" title="{{ product.0.title }}"/>
        {% endif %}
    </header>
    <div class="product-inner">
        <ul class="icon-group icon-list-rating" title="{{ product.averageRating|number_format(2) }}/5 rating">
            {{ product.averageRating|rating|raw }}
        </ul>
        <h5 class="product-title">{{ product.0.title }}</h5>
        <div class="product-desciption">
            {{ product.0.shortDescription|raw }}
        </div>
        <div class="product-meta">
            <ul class="product-price-list">
                <li>
                    <span class="product-price">{{ product.0.getPrice }}</span>
                </li>
            </ul>
            <ul class="product-actions-list">
                <li>
                    <a class="btn btn-sm" href="{{ path('products_show', {'slug': product.0.slug}) }}">
                        <i class="fa fa-bars"></i> Details
                    </a>
                </li>
                <li>
                    <a class="btn btn-sm btn-info" href="{{ path('contact_us', {'product': product.0.id}) }}">
                        Contact Us
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>