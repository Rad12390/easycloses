{% extends "::blank.html.twig" %}

{% block title %}
    Login {% if business is not null %}| {{ business.name }}{% endif %}
{% endblock %}

{% block content %}
    {% if error is not empty %}
        <div class="Metronic-alerts alert alert-danger fade in">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
            <i class="fa-lg fa fa-warning"></i>  {{ error }}
        </div>
    {% endif %}

    <form class="login-form" action="{{ path('login_check', {'slug': slug}) }}" method="post">
        <h3 class="form-title">Login to your account</h3>
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span>
                Enter any Username and password. </span>
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input class="form-control placeholder-no-fix" type="text" autofocus autocomplete="off"
                       placeholder="Username" name="_username" value="{{ last_email }}" required="true"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="_password" required="true"/>
            </div>
        </div>

        <div class="form-actions">
            <label class="rememberme mt-checkbox mt-checkbox-outline">
                <input type="checkbox" id="remember_me" name="_remember_me" /> Remember me
                <span></span>
            </label>
            <button type="submit" class="btn green pull-right">
                Login <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>

        {#<div class="login-options">#}
            {#<h4>Or login with</h4>#}
            {#<ul class="social-icons">#}
                {#<li>#}
                    {#<a class="facebook" data-original-title="facebook" href="{{ path('hwi_oauth_service_redirect', {service: 'facebook'}) }}">#}
                    {#</a>#}
                {#</li>#}
                {#<li>#}
                    {#<a class="twitter" data-original-title="Twitter" href="{{ path('hwi_oauth_service_redirect', {service: 'twitter'}) }}">#}
                    {#</a>#}
                {#</li>#}
                {#<li>#}
                    {#<a class="linkedin" data-original-title="Linkedin" href="{{ path('hwi_oauth_service_redirect', {service: 'linkedin'}) }}">#}
                    {#</a>#}
                {#</li>#}
            {#</ul>#}
        {#</div>#}
        <div class="forget-password">
            <h4>Forgot your password ?</h4>
            <p>
                no worries, click <a href="{{ path('forget_password') }}" >
                    here </a>
                to reset your password.
            </p>
        </div>

        <div class="text-right">
            <span id="siteseal">
                <script async type="text/javascript" src="https://seal.godaddy.com/getSeal?sealID=n9m8yWbfyxyNDK7ofzLT1rM9RV3K1ic5vrhuDH3AkcT13zf6ktw3ZWXPBkYU"></script>
            </span>
        </div>
