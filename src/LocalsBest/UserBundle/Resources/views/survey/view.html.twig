{% extends "::base.html.twig" %}

{% block content %}
    <h3>
        Survey #{{ survey.id }}
    </h3>
    <div class="row">
        <div class="col-md-12">
            <h3>
                {{ survey.question }}
            </h3>

            <form action="{{ path('survey_result', {'id': survey.id}) }}" method="post">
                {% for answer in survey.answers %}
                    <div class="form-group">
                        <label>
                            <input name="results[]" value="{{ answer.id }}" type="{{ survey.type }}">
                            {{ answer.text }}
                        </label>
                    </div>
                {% endfor %}

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn blue">
                </div>
            </form>
        </div>
    </div>

{% endblock %}

