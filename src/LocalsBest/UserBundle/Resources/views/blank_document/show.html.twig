{% extends "::base.html.twig" %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block title %}
    {{ file.title }} - Blank Documents
{% endblock %}

{% block page_title %}
    {{ file.title }}
{% endblock %}

{% block breadcrumbs %}
    <li>
        <i class="fa fa-circle"></i>
        <a href="{{ path('blank_docs_index') }}">Blank Documents</a>
    </li>
    <li class="active">
        <i class="fa fa-circle"></i>
        {{ file.title }}
    </li >
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <!-- BEGIN PREVIEW PORTLET-->
        <div class="portlet purple box">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-eye"></i> Preview
                </div>
                <div class="actions">
                    <a class="btn btn-default" href="{{ path('blank_docs_index') }}">
                        <i class="fa fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                {% include '@LocalsBestUser/document/preview.html.twig' with { 'file' : file } %}
            </div>
        </div>
    </div>
</div>

{% endblock %}