<div class="btn-group" role="group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-gear"></i>
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu pull-right" role="menu">
        <li>
            <a href="{{ path('event_view', {'slug': event.slug}) }}" >View</a>
        </li>
        {% if ( app.user.id == event.createdBy.id or app.user.role.level <= event.createdBy.role.level ) %}
            <li>
                <a href="{{ path('event_edit', {'slug': event.slug}) }}" >Edit</a>
            </li>
            <li>
                <a href="{{ path('event_remove', {'id': event.id}) }}" >Remove</a>
            </li>
        {% endif %}
        <li>
            <a data-confirm="Are you sure you want to mark this task complete?" data-action="ajax" href="{{ path('event_mark_complete', {'slug': event.slug}) }}" >
                Completed
            </a>
        </li>
    </ul>
</div>