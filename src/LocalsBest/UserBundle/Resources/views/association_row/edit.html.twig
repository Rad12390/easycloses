<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Edit Association</h4>
</div>
<form method="POST" role="form" class="form-horizontal" action="{{ path('association_row_edit', { 'id': assocRow.id, 'username': userProfile_username }) }}">
    <div class="modal-body">
        <div class="form-body">
            <div class="form-group">
                <label class="col-md-3 control-label">Association Name</label>
                <div class="col-md-9">
                    <select name="association" class="form-control" disabled>
                        <option value="{{ assocRow.association.id }}" selected>{{ assocRow.association.title }}</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Association ID</label>
                <div class="col-md-9">
                    <input class="form-control" name="associationId" value="{{ assocRow.associationMlsId }}" pattern=".{4,}" required title="4 characters minimum" onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn green btn-outline">Save</button>
    </div>
</form>
