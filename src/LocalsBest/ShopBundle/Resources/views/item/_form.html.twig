                    <span>{{ tooltip_text.getText('by Area','header')|raw }}</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                {% for restriction in form.restrictions %}

                    {{ form_row(restriction.states) }} 
{#                    {{ form_row(restriction.statesSwitch) }}#}
                    {{ form_row(restriction.citiesSwitch) }}
                   {# {{ form_row(restriction.cities) }}#}
                   <div class="form-group">                
                       <label class="control-label" for="localsbest_shopbundle_item_restrictions_0_cities">Cities</label>
                       <span style="float:right;margin-top:-15px;">
                            {{ button_text.getText('2')|raw }}
                            {{ button_text.getText('3')|raw }}
                       </span>
                       <select id="localsbest_shopbundle_item_restrictions_0_cities" name="localsbest_shopbundle_item[restrictions][0][cities][]" class="select2 form-control select2-hidden-accessible" multiple="" tabindex="-1" aria-hidden="true"> 
                       </select>
                   </div>
                {% endfor %}
            </div>
        </div>
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    by Industry
                    <span>{{ tooltip_text.getText('by Industry','header')|raw }}</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                {% for restriction in form.restrictions %}

                    {{ form_row(restriction.industriesSwitch) }}
                    {{ form_row(restriction.industries) }}
                  


                {% endfor %}
            </div>
        </div>
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    by Business Name
                    <span>{{ tooltip_text.getText('by Business Name','header')|raw }}</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="expand" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body portlet-collapsed">
                {% for restriction in form.restrictions %}
                    {{ form_row(restriction.businessesSwitch) }}
                    {{ form_row(restriction.businesses) }}
                    

                {% endfor %}
            </div>
        </div>
            
        <div class="portlet box blue use-restriction">
        <div class="portlet-title">
            <div class="caption">
                Add Use Restrictions
            </div>
            <div class="tools">
                <a href="javascript:;" class="expand" data-original-title="" title="">
                </a>
            </div>
        </div>
        <div class="portlet-body portlet-collapsed">
            
            <ul class="list-unstyled item-restrictions" data-prototype="{{ form_widget(form.restrictions.vars.prototype)|e('html_attr') }}">
                {% for restriction in form.restrictions %}
                    <li>
                        {{ form_row(restriction.states) }}
                        {{ form_row(restriction.citiesSwitch) }}
                         
                        {{ form_row(restriction.industriesSwitch) }}
                        {{ form_row(restriction.industries) }}
                        {{ form_row(restriction.businessesSwitch) }}
                        {{ form_row(restriction.businesses) }}
                       
                    </li>
                    
                {% endfor %}
            </ul>
            <div class="form-group">                
                        <label class="control-label" for="localsbest_shopbundle_item_restrictions_1_cities">Cities</label>
                        <select id="localsbest_shopbundle_item_restrictions_1_cities" name="localsbest_shopbundle_item[restrictions][1][cities][]" class="select2 form-control select2-hidden-accessible" multiple="" tabindex="-1" aria-hidden="true"> 
                        </select>
                    </div>
        </div>
            
    </div>


    </div>
</div>


