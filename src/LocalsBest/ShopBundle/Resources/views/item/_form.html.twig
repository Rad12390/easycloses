            <span>{{ tooltip_text.getText('Add Images','header')|raw }}</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title="">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <ul class="list-unstyled item-images" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
