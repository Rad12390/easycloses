<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            Description
            <span>{{ tooltip_text.getText('Description','header')|raw }}</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title="">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        {{ form_row(form.title) }}
        {{ form_row(form.shortDescription) }}
        {{ form_row(form.description) }}
         {{ form_row(form.quantity) }}
    </div>
</div>
    
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            Package Display
            <span>{{ tooltip_text.getText('Package Display','header')|raw }}</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse" data-original-title="" title="">
            </a>
        </div>
    </div>
    <div class="portlet-body">

        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    by Member Role
                    <span>{{ tooltip_text.getText('by Member Role','header')|raw }}</span>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                    </a>
                </div>

            </div>
            <div class="portlet-body">
                {% for key , restriction  in form.restrictions %}
                    {% if key == 0 %}
                    {{ form_row(restriction.buyerType) }}
                    
