<ul class="shopping-cart-items">
    {% for item in entities %}
        <li>
            <a href="{{ path('sku_show', {'id': item.sku.id}) }}">
                {% if item.sku.package is not empty %}
                     <img src="{{ vich_uploader_asset(item.sku.package   , 'file') }}" alt="{{ item.sku.title }}">
                {% else %}
                    <img src="/shop/img/70x70.png" title="{{ item.sku.title }} alt="{{ item.sku.title }}"/>
                {% endif %}
                <h5>{{ item.sku.title }}</h5>
                <span class="shopping-cart-item-price">${{ (item.sku.price.retailPrice )|number_format }}</span>
            </a>
        </li>
    {% else %}
        <li>
            Empty
        </li>
    {% endfor %}
</ul>

<ul class="list-inline text-center {% if entities|length == 0 %}hidden{% endif %}">
    <li>
        <a href="{{ path('cart_show') }}">
            <i class="fa fa-shopping-cart"></i> View Cart
        </a>
    </li>
</ul>