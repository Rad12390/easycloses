{% extends '::base.html.twig' %}

{% form_theme assign_form 'bootstrap_3_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('system/global/plugins/select2/css/select2.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('system/global/plugins/select2/css/select2-bootstrap.min.css') }}" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('system/global/plugins/select2/js/select2.full.js') }}"></script>

    <script>
        $(document).ready(function(){
            $('.select2').select2({
                placeholder: "-Please Choose Items-"
            });
        });
    </script>
{% endblock %}

{% block content -%}
    <h1>Product Assign To</h1>

    {{ form(assign_form) }}

    <p>Users that have this Product:</p>
    <ul>
        {% for item in paymentSets %}
            <li>{{ item.createdBy.fullName }}</li>
        {% endfor %}
    </ul>

    <a class="btn btn-default" href="{{ path('admin_products') }}">
        Back to the list
    </a>
{% endblock %}
