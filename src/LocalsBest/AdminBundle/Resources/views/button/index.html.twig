{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Buttons list</h1>

    <a class="btn btn-success" href="{{ path('admin_buttons_new') }}">
        <i class="fa fa-plus"></i>
        Add a new entry
    </a>
    <br/>
{#    {{ button_text.getText('5')|raw }}#}
    <table class="table records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Button's Location</th>
                <th>Label</th>
                <th>Button's Link(if any)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_buttons_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.location }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.link }}</td>
                <td>
                    <a href="{{ path('admin_buttons_show', { 'id': entity.id }) }}" class="btn btn-icon-only blue"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('admin_buttons_edit', { 'id': entity.id }) }}" class="btn btn-icon-only green"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
