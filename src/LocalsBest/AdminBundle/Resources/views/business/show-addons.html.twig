<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title" id="myModalLabel">Packages and Addons for "{{ business.name }}"</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            {% for module in business.bundles %}
                <div class="col-md-12">
                    <h4>Bundle: "{{ module.name }}"</h4>
                    {% for addon in module.productTypes %}
                        <span class="badge badge-primary">
                            {{ addon.product.title }}
                        </span>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="modal-footer"></div>
</div>