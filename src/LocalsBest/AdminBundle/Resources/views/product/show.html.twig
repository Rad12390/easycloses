{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Product #{{ entity.id }}</h1>

    <div class="row">
        <div class="col-sm-6 col-md-6">
            <table class="table record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ entity.title }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ entity.slug }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>${{ entity.price|number_format }}</td>
                    </tr>
                    {% if tags is not empty %}
                        <tr>
                            <th>Tags</th>
                            <td>
                                {% for tag in tags %}
                                    <span class="btn btn-xs btn-primary"><i class="fa fa-tag"></i> {{ tag }}</span>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>

        <div class="col-sm-6 col-md-6">
            <div class="thumbnail">
                {% for image in entity.images %}
                    <img class="img" src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ entity.title }}">
                {% endfor %}
            </div>
        </div>

    </div>


    <a class="btn btn-default" href="{{ path('admin_products') }}">
        Back to the list
    </a>

    <a class="btn btn-warning" href="{{ path('admin_products_edit', { 'id': entity.id }) }}">
        Edit
    </a>

    {{ form(delete_form) }}
{% endblock %}
